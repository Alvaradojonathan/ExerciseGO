@model IEnumerable<ExerciseGO.Models.Video>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.VideoLink)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VideoName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsWatch)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsBonus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TargetArea.TargetAreaName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Game.UserName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <iframe width="560" height="315" src="@Html.DisplayFor(modelItem => item.VideoLink)" frameborder="0" allowfullscreen></iframe>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VideoName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsWatch)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsBonus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TargetArea.TargetAreaName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Game.UserName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.VideoID }) |
            @Html.ActionLink("Details", "Details", new { id=item.VideoID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.VideoID })
        </td>
    </tr>
}

</table>
