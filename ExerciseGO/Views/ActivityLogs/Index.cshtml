@model IEnumerable<ExerciseGO.Models.ActivityLog>
<div class="outer2">
    <div class="container thumbnail">
    <h1 style="margin-top:5%; text-align:center;">Select Activity Log</h1>

    @*Filter*@
    <div class="container">
        <button id="showAll" class="pull-right" onclick="openAllActivityDivs()">Show All</button>
        <button id="Arms" class="showAll" onclick="openArmsDiv()">Arms</button>
        <button id="Back" class="showAll" onclick="openBackDiv()">Back</button>
        <button id="Chest" class="showAll" onclick="openChestDiv()">Chest</button>
        <button id="Abs" class="showAll" onclick="openAbsDiv()">Abs</button>
        <button id="Legs" class="showAll" onclick="openLegsDiv()">Legs</button>
        <button id="Cardio" class="showAll" onclick="openCardioDiv()">Cardio</button>
    </div>
    
</div>
    @*Activity log sections*@
    <div id="armsActivity" class="container thumbnail row" style="margin:auto;">
        <div class="container">
            <h3>Arms:<a href="~/ActivityLogs/Create" class="pull-right">&#43; Add new</a></h3>
            @foreach (var arms in Model)
            {
                if (@Html.DisplayFor(modelItem => arms.TargetArea.TargetAreaName).ToString() == "Arms")
                {
                    <div id="post" class="container thumbnail col-md-5">
                        <div style="padding:6px;">
                            <div class="row">
                                <p class="container col-md-offset-11 col-md-1" style="font-size:28px; padding-top:0px; margin-top:0px;"><a href="~/ActivityLogs/Delete/@Html.DisplayFor(model => arms.ActivityLogID)">&times;</a></p>
                                <div class="col-md-3">
                                    <p>Reps: @Html.DisplayFor(modelItem => arms.TotalReps)</p>
                                    <div class="row">
                                        <p class="container" style="">@Html.DisplayFor(modelItem => arms.LogDate)</p>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <p>Sets: @Html.DisplayFor(modelItem => arms.TotalSets)</p>
                                </div>
                                <div class="col-md-6" style="border-left:dashed 0.5px; border-color:#DDDDDD">
                                    <p>Notes:</p>
                                    <p>@Html.DisplayFor(modelItem => arms.Notes)</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
