@model ExerciseGO.Models.ActivityLog

@{
    ViewBag.Title = "Delete";
}
<div class="outer2">
    <div id="createActivity" class="thumbnail container">
        <div>
            <h3 id="activityHeading" style="margin-top:6px;">Are you sure you want to delete this?</h3>
            <hr />
            <div id="post" style="width:90%; margin-bottom:15px;">
                <div class="row">
                    <h5 class="container col-md-offset-4 col-md-4">Log Date: @Html.DisplayFor(model => model.LogDate)</h5>
                </div>
                <div class="row">
                    <h5 class="col-md-offset-2 col-md-4">Reps: @Html.DisplayFor(model => model.TotalReps)</h5>
                    <h5 class="col-md-4" id="noteSection">Notes: @Html.DisplayFor(model => model.Notes)</h5>
                    <h5 class="col-md-offset-2 col-md-4">Sets: @Html.DisplayFor(model => model.TotalSets)</h5>
                </div>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color col-md-offset-4">
                    <input type="submit" value="Delete" class="btn btn-default" id="showAll" />
                    @Html.ActionLink("Back to List", "Index")
                </div>
            }
        </div>
    </div>
</div>